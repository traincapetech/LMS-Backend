# Database Configuration
MONGO_URI=your_mongodb_atlas_connection_string

# Server Configuration
PORT=5001
JWT_SECRET=your_jwt_secret_key_here

# Admin Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin_password

# Email Configuration (SMTP / Brevo / Gmail)
# Brevo API (preferred if set)
BREVO_API_KEY=your_brevo_api_key
BREVO_FROM=your_verified_sender@yourdomain.com
BREVO_FROM_NAME=Traincape LMS

# Brevo SMTP (optional)
BREVO_SMTP_USER=your_brevo_login
BREVO_SMTP_PASSWORD=your_brevo_smtp_key
BREVO_SMTP_PORT=587
BREVO_FROM=your_verified_sender@yourdomain.com
BREVO_FROM_NAME=Traincape LMS

# Generic SMTP Settings (Hostinger, etc.)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_USER=your_email@yourdomain.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=your_verified_sender@yourdomain.com
SMTP_FROM_NAME=Traincape LMS

# Gmail App Password (fallback)
EMAIL_USER=your_gmail@gmail.com
EMAIL_PASSWORD=your_gmail_app_password

# Stripe Payments
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLIC_KEY=your_stripe_public_key
FRONTEND_URL=http://localhost:5173

# Alternative: Gmail OAuth2 (uncomment if using Gmail)
# GMAIL_CLIENT_ID=your_google_oauth_client_id
# GMAIL_CLIENT_SECRET=your_google_oauth_client_secret
# GMAIL_REFRESH_TOKEN=your_google_oauth_refresh_token
# GMAIL_ACCESS_TOKEN=your_google_oauth_access_token

# R2 Cloud Storage Configuration (Cloudflare R2)
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_VIDEOS=your-videos-bucket-name
R2_BUCKET_DOCS=your-docs-bucket-name
R2_BUCKET_IMAGES=your-images-bucket-name
R2_PUBLIC_URL_VIDEOS=https://your-videos-domain.com
R2_PUBLIC_URL_DOCS=https://your-docs-domain.com
R2_PUBLIC_URL_IMAGES=https://your-images-domain.com 